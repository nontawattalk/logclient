{
  "agent": {
    // Select which output format to use: rfc3164, rfc5424 or custom.
    "mode": "rfc5424",
    // When using mode=custom, this template describes how to compose
    // the message. Tokens are enclosed in braces and may include
    // an optional format specifier after a colon. See README.md for
    // a list of available tokens.
    "customTemplate": "{timestamp:O} host={hostname} chan={channel} id={event_id} lvl={level} msg={message}",
    // Destination server and port for syslog output.
    "server": "192.0.2.10",
    "port": 514,
    // Set to udp or tcp. TCP uses octet-counted framing per RFC6587.
    "protocol": "udp",
    // Override the hostname in syslog messages. Leave empty to use
    // the computer's NETBIOS name.
    "hostname": "",
    // Application name included in messages and defaults to
    // WinSyslogAgent when left unspecified.
    "appName": "WinSyslogAgent",
    // Maximum number of events to hold in memory between sends.
    "maxQueue": 10000,
    // Number of events to batch into a single send operation.
    "sendBatchSize": 50,
    // Milliseconds to wait between sending batches.
    "sendIntervalMs": 200,
    // Channels (logs) to subscribe to. Typical values are
    // Application, System and Security. Additional channels such
    // as Setup or ForwardedEvents can also be included.
    "channels": ["Application", "System", "Security"],
    // Map Windows log names to syslog facility numbers. Facility
    // numbers correspond to local0..local7 (16-23) or other
    // predefined values. See RFC5424 for details.
    "facilityMap": {
      "Application": 16,
      "System": 16,
      "Security": 10
    }
  }
}
